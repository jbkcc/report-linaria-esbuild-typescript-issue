{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2016", "dom"],
    "jsx": "react",
    "module": "commonjs",
    "isolatedModules": true,
    "rootDir": "src",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build"
  },
  "include": ["src/*"],
  "exclude": [
    "./node_modules/**/*"
  ]
}
